{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "build",
        "declaration": true,
        "esModuleInterop":true,
        "lib": ["ES2015","ES2016","ES2017","ES5","ES6","ES7"],
        "skipLibCheck": true,
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "test/*.test.ts"
    ]
}